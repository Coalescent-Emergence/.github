{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Architecture Guardian Output Schema",
  "type": "object",
  "required": ["violations", "confidence"],
  "properties": {
    "violations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["adr_id", "severity", "description"],
        "properties": {
          "adr_id": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["advisory", "warning", "critical"]
          },
          "description": { "type": "string" },
          "suggestion": { "type": "string" },
          "line_numbers": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "compliant_decisions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "missing_adr": {
      "type": "array",
      "items": { "type": "string" }
    },
    "confidence": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    }
  }
}
