{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Technical Decomposer Output Schema",
  "type": "object",
  "required": ["tasks", "tests", "confidence"],
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "depends_on", "estimate"],
        "properties": {
          "id": { "type": "string", "pattern": "^T\\d+$" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" }
          },
          "estimate": { "type": "string" },
          "files_affected": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["unit", "integration", "e2e"]
          },
          "description": { "type": "string" },
          "files": {
            "type": "array",
            "items": { "type": "string" }
          },
          "coverage_target": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          }
        }
      }
    },
    "ci_considerations": {
      "type": "array",
      "items": { "type": "string" }
    },
    "confidence": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "rationale": { "type": "string" }
  }
}
